import { DefaultRootState } from 'react-redux';

{{#if isEntity}}
export const select{{ properCase name }}sIds = (state: DefaultRootState) => state.{{ camelCase name }}s.allIds;

export const select{{ properCase name }}sByIds = (state: DefaultRootState) => state.{{ camelCase name }}s.byIds;

export const selectModule = (id: string) => (state: DefaultRootState) =>
  !!id ? selectModulesByIds(state)[id] : undefined;

export const selectModules = (ids: string[]) => (state: DefaultRootState) =>
  ids.map((id) => selectModule(id)(state));

export const selectIsCreating = (state: DefaultRootState) => state.{{ camelCase name }}s.isCreating;

export const selectIsFetching = (...ids: string[]) => (state: DefaultRootState) =>
  ids.some((id) => state.{{ camelCase name }}s.isFetching.includes(id));

export const selectIsUpdating = (id: string) => (state: DefaultRootState) =>
  state.{{ camelCase name }}s.isUpdating === id;

export const selectIsDeleting = (id: string) => (state: DefaultRootState) =>
  state.{{ camelCase name }}s.isDeleting === id;
{{/if}}
